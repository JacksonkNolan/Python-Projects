my_list = []
cont = True

while cont:
    rep = True
    while rep:
        a = input("Enter a number or say 'exit' to quit: ")
        if a == 'exit':
            cont = False
            rep = False
        elif a.isdigit():
            my_list.append(int(a))
            rep = False
        else:
            print("Invalid input")


total_sum = 0
for number in my_list:
    total_sum += number

print(f'The sum of the numbers is: {total_sum}')
